<div class="container">
  <div class="card bg-light text-center mt-5">
    <div class="card-body">
      <h1 class="display-4">Welcome to My Personal Home Page</h1>
      <p class="lead">Get to know me better and explore my blog.</p>
      <div class="card-actions mb-3">
        <%= link_to "About Me", about_path, class:"btn btn-secondary" %>
        <%= link_to "Blog", posts_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>

  <% if current_user %>
  <div class="card mt-5">
    <div class="card-body">
      <h2 class="text-center mb-4">User Info</h2>
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="user-info">
            <i class="bi bi-person-fill"></i>
            <h3><%= current_user.full_name %></h3>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info">
            <i class="bi bi-geo-alt-fill"></i>
            <p><%= current_user.address.street.titleize %>, <%= current_user.address.city.titleize %>, <%= current_user.address.state.titleize %>, <%= current_user.address.zip %>, <%= current_user.address.country.titleize %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

</div>
