<p style="color: green"><%= notice %></p>
<div class="container my-4">
  <% if current_user&.admin? %>
    <div class="btn-group my-4">
      <%= link_to "Edit this category", edit_category_path(@category), class:'btn btn-warning' %> 
      <%= button_to "Destroy this category", @category, method: :delete, class:'btn btn-danger' %>| 
    </div>
  <% end %>

  <%= render @category %>

  <div>
    <%= link_to "Back to categories", categories_path, class: "btn btn-primary my-4" %>
  </div>
</div>
