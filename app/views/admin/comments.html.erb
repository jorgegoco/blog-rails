<div class="container">
  <h1 class="text-center">Administrator</h1>
  <%= render 'admin/nav_links' %>
  <table class="table table-dark table-striped mt-3">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Comment</th>
        <th scope="col">Author</th>
        <th scope="col">Post Title</th>
        <th scope="col">Post Author</th>
        <th scope="col">Latest Create/Update</th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <th scope="row"><%= comment.id %></th>
          <td><%= link_to truncate(comment.body.to_plain_text, length: 15), admin_comment_path(comment) %></td>
          <td><%= comment.user.name %></td>
          <td><%= comment.post.title %></td>
          <td><%= comment.post.user.name %></td>
          <td><%= comment.updated_at.strftime("%B %d, %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
