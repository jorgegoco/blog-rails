<div class="container">
  <h1 class="text-center">Administrator</h1>
  <%= render 'admin/nav_links' %>
  <table class="table table-dark table-striped mt-3">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Post</th>
        <th scope="col">Author</th>
        <th scope="col">Comments</th>
        <th scope="col">Latest Create/Update</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <th scope="row"><%= post.id %></th>
          <td><%= link_to post.title.truncate(15), admin_post_path(post) %></td>
          <td><%= post.user.name %></td>
          <td><%= pluralize(post.comments.size, "Comment") %></td>
          <td><%= post.updated_at.strftime("%B %d, %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>