<div class="container card mb-4 shadow">
  <div id="<%= dom_id post %>" class="my-3">
    <h2><%= post.title %></h2>
    <h4>posted by <%= link_to post.user.full_name, user_path(post.user), class: "text-decoration-none" %></h4>
    <h6><%= pluralize(post.views, "view") %></h6>   
    <%= post.body %>   
  </div>
</div>