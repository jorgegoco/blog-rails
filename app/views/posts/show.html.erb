<div class="container mb-4 mt-4">
  <%= render @post %>
  <div class="mt-3">
    <%= link_to "Edit this post", edit_post_path(@post), class:"btn btn-warning mr-2 btn-sm" %> |
    <%= link_to "Back to posts", posts_path, class:"btn btn-primary mr-2 btn-sm" %>
    <div class="mt-2">
      <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger btn-sm" %>
    </div>
  </div>
</div>

<div class="container">
  <%= render 'comments/form', 
    post: @post, 
    comment: @post.comments.build,
    submit_label: "Reply" %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', 
      post: @post, 
      comment: comment %>
  <% end %>
</div>
