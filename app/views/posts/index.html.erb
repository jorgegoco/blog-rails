<p style="color: green"><%= notice %></p>
<div class="container">
  <h1><i class="bi bi-journal-text"></i> Posts</h1>
  <div id="posts">
    <% @posts.each do |post| %>
      <div class="card mb-3 shadow">
        <div class="card-body">
          <%= render post %>
          <p>
            <%= link_to "Show this post", post, class: "btn btn-primary mt-4" %>
          </p>
        </div>
      </div>
    <% end %>    
  </div>
  <%= link_to "New post", new_post_path, class: "btn btn-success mb-4" %>
</div>
